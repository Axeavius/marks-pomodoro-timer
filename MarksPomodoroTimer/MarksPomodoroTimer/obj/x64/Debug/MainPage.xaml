<Page x:ConnectionId='1'
    x:Class="MarksPomodoroTimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MarksPomodoroTimer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Timer Overlay Animations  -->
        <Storyboard x:ConnectionId='2' x:Name="DisplayTimerOverlay">
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayEllipse" Storyboard.TargetProperty="Width">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="400" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayEllipse" Storyboard.TargetProperty="Height">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="400" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="StartNextTaskButton" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayText" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="HideTimerOverlay">
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayEllipse" Storyboard.TargetProperty="Width">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayEllipse" Storyboard.TargetProperty="Height">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="StartNextTaskButton" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="TimerOverlayText" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!--  Break Time Overlay Animations  -->
        <Storyboard x:ConnectionId='4' x:Name="DisplayBreakTimeOverlay">
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayEllipse" Storyboard.TargetProperty="Width">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="400" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayEllipse" Storyboard.TargetProperty="Height">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="400" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="StartBreakTimeButton" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayText" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:ConnectionId='5' x:Name="HideBreakTimeOverlay">
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayEllipse" Storyboard.TargetProperty="Width">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayEllipse" Storyboard.TargetProperty="Height">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="420" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="StartBreakTimeButton" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames EnableDependentAnimation="True" Storyboard.TargetName="BreakTimeOverlayText" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid Background="{ThemeResource CustomAcrylicBrush}">
        <Grid x:ConnectionId='6' x:Name="AppTitleBar" Style="{StaticResource AppTitleBarGridStyle}" />
        <SplitView
            DisplayMode="Inline"
            IsPaneOpen="True"
            OpenPaneLength="320"
            PaneBackground="{ThemeResource CustomAcrylicDarkBrush}">
            <SplitView.Pane>
                <Grid x:ConnectionId='7' x:Name="TaskListPane">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource AppTitleBarTextBlockStyle}" Text="Mark's Pomodoro Timer" />
                    <ListView x:ConnectionId='8'
                        x:Name="TaskList"
                        Grid.Row="1"
                        IsItemClickEnabled="True"
                                                      
                                                              
                                                                  >
                        <ListView.ItemTemplate>
                            <DataTemplate                      >
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="TaskCheckbox" MinWidth="20" />
                                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button x:ConnectionId='9'
                        x:Name="AddTaskButton"
                        Grid.Row="2"
                                                   
                        Style="{StaticResource AddTaskButtonStyle}" />
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock x:ConnectionId='10' x:Name="TimerHeader" Style="{StaticResource TimerHeaderTextBlockStyle}" Text="Task 1" />
                    <controls:RadialProgressBar x:ConnectionId='11'
                        x:Name="TimerRadial"
                        Grid.Row="1"
                        Style="{StaticResource TimerRadialStyle}"
                        Value="25" />
                    <Grid x:ConnectionId='12' x:Name="TimerOverlay" Grid.Row="1">
                        <Ellipse x:ConnectionId='23' x:Name="TimerOverlayEllipse" Style="{StaticResource TimerOverlayEllipseStyle}" />
                        <TextBlock x:ConnectionId='24' x:Name="TimerOverlayText" Style="{StaticResource TimerOverlayTextBlockStyle}" Text="Start Next Task?" />
                        <Button x:ConnectionId='25' x:Name="StartNextTaskButton"                                   Style="{StaticResource TimerOverlayButtonStyle}">
                            <FontIcon Glyph="&#xE8FB;" Style="{StaticResource TimerControlsButtonFontIconStyle}" />
                        </Button>
                    </Grid>
                    <Grid x:ConnectionId='13' x:Name="BreakTimeOverlay" Grid.Row="1">
                        <Ellipse x:ConnectionId='20' x:Name="BreakTimeOverlayEllipse" Style="{StaticResource BreakTimeOverlayEllipseStyle}" />
                        <TextBlock x:ConnectionId='21' x:Name="BreakTimeOverlayText" Style="{StaticResource TimerOverlayTextBlockStyle}" Text="Start Break Time?" />
                        <Button x:ConnectionId='22' x:Name="StartBreakTimeButton"                                    Style="{StaticResource TimerOverlayButtonStyle}">
                            <FontIcon Glyph="&#xEC32;" Style="{StaticResource TimerControlsButtonFontIconStyle}" />
                        </Button>
                    </Grid>
                    <TextBlock x:ConnectionId='14'
                        x:Name="TimerText"
                        Grid.Row="1"
                        Style="{StaticResource TimerTextBlockStyle}"
                        Text="Ready?" />
                    <StackPanel x:ConnectionId='15' x:Name="TimerControls" Grid.Row="2" Style="{StaticResource TimerControlsStackPanelStyle}">
                        <ToggleButton x:ConnectionId='17' x:Name="PlayPauseTimerButton"                                     Style="{StaticResource PlayPauseTimerButtonStyle}" />
                        <Button x:ConnectionId='18'
                            x:Name="NextTaskButton"
                                                        
                            Style="{StaticResource TimerControlsButtonStyle}"
                            ToolTipService.ToolTip="Next Task">
                            <FontIcon Glyph="&#xE893;" Style="{StaticResource TimerControlsButtonFontIconStyle}" />
                        </Button>
                        <Button x:ConnectionId='19'
                            x:Name="ResetTimerButton"
                                                          
                            Style="{StaticResource TimerControlsButtonStyle}"
                            ToolTipService.ToolTip="Reset Timer">
                            <FontIcon Glyph="&#xE8EE;" Style="{StaticResource TimerControlsButtonFontIconStyle}" />
                        </Button>
                    </StackPanel>
                    <TextBlock x:ConnectionId='16' x:Name="ClockTime" Grid.Row="3" Style="{StaticResource ClockTextBlockStyle}" />
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

