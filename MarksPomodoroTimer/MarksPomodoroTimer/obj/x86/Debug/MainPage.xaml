<Page
    x:Class="MarksPomodoroTimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MarksPomodoroTimer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource CustomAcrylicBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='1' x:Name="AppTitleBar" Background="{ThemeResource CustomAcrylicBrush}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--<Button x:Name="BackButton" Click="BackButton_Click" Style="{StaticResource AppTitleBarBackButtonStyle}" />-->
            <TextBlock Grid.Column="1" Style="{StaticResource AppTitleBarTextBlockStyle}" Text="Mark's Pomodoro Timer" />
        </Grid>
        <SplitView x:ConnectionId='2'
            x:Name="TaskListPane"
            Grid.Row="1"
            DisplayMode="Inline"
            IsPaneOpen="True"
            OpenPaneLength="320">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView>
                        <ListViewHeaderItem HorizontalContentAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Stretch">
                                Task List
                            </TextBlock>
                        </ListViewHeaderItem>
                        <ListViewItem Padding="12,0,0,0" HorizontalContentAlignment="Stretch" IsSelected="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0"
                                    VerticalAlignment="Center"
                                    TextAlignment="Left">
                                    Task 1
                                </TextBlock>
                                <TextBox Grid.Column="1" Margin="20,0" Visibility="Collapsed" />
                                <Button Grid.Column="2" Padding="8" HorizontalAlignment="Right">
                                    <FontIcon
                                        HorizontalAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="24"
                                        Glyph="&#xE711;" />
                                </Button>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>Task 2</ListViewItem>
                        <ListViewItem>Task 3</ListViewItem>
                        <ListViewItem>Task 4</ListViewItem>
                    </ListView>
                    <Button
                        Grid.Row="1"
                        Padding="8"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,12,0"
                                HorizontalAlignment="Left"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Glyph="&#xE710;" />
                            <TextBlock HorizontalAlignment="Left">Add New Task</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Center" FontSize="24" Text="Task 1" />
                    <controls:RadialProgressBar x:ConnectionId='3'
                        x:Name="TimerRadialProgressBarControl"
                        Grid.Row="1"
                        Width="400"
                        Height="400"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TimerControlForegroundBrush}"
                        Maximum="180"
                        Minimum="0"
                        Outline="Gray"
                        Thickness="20"
                        Value="70" />
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="64">
                        25:00
                    </TextBlock>
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Button Margin="4,0" Padding="8">
                            <Grid>
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Glyph="&#xE768;" />
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Glyph="&#xE769;"
                                    Visibility="Collapsed" />
                            </Grid>
                        </Button>
                        <Button Margin="4,0" Padding="8">
                            <Grid>
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Glyph="&#xE893;" />
                            </Grid>
                        </Button>
                        <Button Margin="4,0" Padding="8">
                            <Grid>
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="24"
                                    Glyph="&#xE8EE;" />
                            </Grid>
                        </Button>
                    </StackPanel>
                    <TextBlock x:ConnectionId='4'
                        x:Name="ClockTime"
                        Grid.Row="3"
                        Margin="0,0,0,48"
                        HorizontalAlignment="Center"
                        FontSize="24" />
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

